<section class="mw7 center">
  <h2 class="baskerville f1 measure tc fw5 ph3 ph0-l">{{trip.tripName}}</h2>
  <div class="tc">	
  	<div class="f6 ttu tracked blue pb2">Instructor: <strong>{{trip.teachers}}</strong></div>
   	<div class="f6 ttu tracked purple pb2">from <strong>{{trip.startDate}}</strong> to <strong>{{trip.endDate}}</strong></div>
   	<div class="f6 ttu tracked green pb2">Early bird price <strong>{{{trip.earlyBirdPrice}}}</strong></div>
   	<div class="f6 ttu tracked light-purple pb2">Regular price <strong>{{trip.regularPrice}}</strong></div>
  </div>
   
	<article class="baskerville pb2">
	  <div class="ph3 ph4-m ph5-l">
	    <div class="measure db center f5 f4-ns lh-copy">
	      <img class="db w-100 mt4 mt5-ns" src="{{trip.photos}}">
	      	<p>{{{trip.fullDescription}}}</p>
      </div>
	  </div>
	</article>


<article class="pb2">
	<!-- itinerary -->
	<h2 class="baskerville f1 measure tc fw5 ph3 ph0-l">General Itinerary</h2>
	{{#each trip.itinerary as |it|}}
		<article class="center mw5 mw6-ns hidden ba mv4">
		  <h1 class="f4 bg-near-black white mv0 pv2 ph3">{{@key}}</h1>
		  <div class="pa3 bt">
		    <p class="f6 f5-ns lh-copy measure mv0">
		    {{{it}}}
		    </p>
		  </div>
		</article>
	{{/each}}

	<div class="tc avenir pt5">
		<a class="grow bg-green white f1 f1-l link bg-animate hover-bg-blue hover-white dib pa4 ph5-l ba b--dotted" href="/apply">Apply Now</a>
	</div>
</article>
</section>