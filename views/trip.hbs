<section class="mw7 center">
  <h2 class="baskerville f1 measure tc fw5 ph3 ph0-l">{{trip.tripName}}</h2>
  <div class="tc">	
  	<a class="white f4 link bg-dark-blue b no-underline black dib ph2 pv1">{{trip.startDate}} to {{trip.endDate}}</a>
    <a class="white f4 link b bg-purple no-underline black dib ph2 pv1">Taught by {{trip.teachers}}</a>
  </div>
   
	<article class="baskerville pb2">
	  <div class="ph3 ph4-m ph5-l">
	    <div class="measure db center f5 f4-ns lh-copy">
	      <img class="db w-100 mt4 mt5-ns" src="{{trip.photos}}">
	      	<p>{{{trip.fullDescription}}}</p>
      </div>
	  </div>
	</article>


<article class="pb2">
	<!-- itinerary -->
	<h2 class="baskerville f1 measure tc fw5 ph3 ph0-l">Sample Itinerary</h2>
	{{#each trip.itinerary as |it|}}
		<article class="center mw5 mw6-ns hidden ba mv4">
		  <h1 class="f4 bg-near-black white mv0 pv2 ph3">{{@key}}</h1>
		  <div class="pa3 bt">
		    <p class="f6 f5-ns lh-copy measure mv0">
		    {{it}}
		    </p>
		  </div>
		</article>
	{{/each}}

	<div class="tc avenir pt5">
		<a class="grow bg-green white f1 f1-l link bg-animate hover-bg-blue hover-white dib pa4 ph5-l ba b--dotted" href="http://philomobile.bigcartel.com/">Apply Now</a>
	</div>
</article>
</section>